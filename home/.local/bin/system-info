    *)
        # Mostrar informaÃ§Ãµes completas no terminal
        echo "=== InformaÃ§Ãµes do Sistema ==="
        echo
        echo "ðŸ–¥ï¸  Hostname: $(hostnamectl --static)"
        echo "ðŸ‘¤ UsuÃ¡rio: $USER"
        echo "ðŸ§ Sistema: $(uname -sr)"
        echo "ðŸŽ® Desktop: $XDG_CURRENT_DESKTOP"
        echo "ðŸ’¾ RAM: $(free -h | awk '/^Mem:/ {print $3 "/" $2}')"
        echo "ðŸ’¿ Disco: $(df -h / | awk 'NR==2 {print $3 "/" $2 " (" $5 ")"}')"
        echo "ðŸ”‹ Bateria: $(cat /sys/class/power_supply/BAT*/capacity 2>/dev/null || echo "N/A")%"
        echo "ðŸŒ¡ï¸  CPU Temp: $(sensors | awk '/Core 0/ {print $3}' 2>/dev/null || echo "N/A")"
        echo "ðŸ“Š Uptime: $(uptime -p)"
        echo "ðŸ”Š Volume: $(wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{print $2*100"%"}')"
        echo "ðŸŒ IP Local: $(ip route get 1 | awk '{print $7; exit}' 2>/dev/null || echo "N/A")"
