#!/bin/bash

# Script de comandos rÃ¡pidos para usar com rofi
# Use: rofi -show run -run-command "quick-commands {cmd}"

commands=(
    "ğŸ”’ Lock Screen:swaylock"
    "ğŸ”„ Reload Niri:niri msg action reload-config"
    "ğŸ“¸ Screenshot Area:screenshot area"
    "ğŸ“¸ Screenshot Full:screenshot full"
    "ğŸ“¸ Screenshot Clipboard:screenshot clipboard"
    "ğŸ–¼ï¸  Random Wallpaper:wallpaper-selector random"
    "ğŸµ Volume Up:wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+"
    "ğŸµ Volume Down:wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-"
    "ğŸµ Volume Mute:wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    "ğŸ’¡ Brightness Up:brightnessctl set 10%+"
    "ğŸ’¡ Brightness Down:brightnessctl set 10%-"
    "ğŸ’» System Info:alacritty -e system-info"
    "ğŸ“ File Manager:thunar"
    "ğŸŒ Browser:firefox"
    "âš™ï¸  System Monitor:alacritty -e htop"
    "ğŸ”§ Audio Control:pavucontrol"
    "âš¡ Power Off:systemctl poweroff"
    "ğŸ”„ Restart:systemctl reboot"
    "ğŸ˜´ Suspend:systemctl suspend"
)

if [ -z "$1" ]; then
    # Mostrar lista de comandos
    for cmd in "${commands[@]}"; do
        echo "${cmd%%:*}"
    done
else
    # Executar comando selecionado
    for cmd in "${commands[@]}"; do
        if [ "${cmd%%:*}" = "$1" ]; then
            command="${cmd#*:}"
            eval "$command"
            exit 0
        fi
    done
    echo "Comando nÃ£o encontrado: $1"
fi