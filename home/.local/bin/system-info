#!/bin/bash

# Script de informaÃ§Ãµes do sistema
# Para usar com rofi ou terminal

case "$1" in
    "rofi")
        # Mostrar informaÃ§Ãµes formatadas para rofi
        echo -e "ðŸ–¥ï¸  $(hostnamectl --static)\nðŸ’¾  $(free -h | awk '/^Mem:/ {print $3 "/" $2}')\nðŸ”‹  $(cat /sys/class/power_supply/BAT*/capacity 2>/dev/null || echo "N/A")%\nðŸŒ¡ï¸  $(sensors | awk '/Core 0/ {print $3}' 2>/dev/null || echo "N/A")\nðŸ“Š  $(uptime | awk '{print $3}' | sed 's/,//')\nðŸ”Š  $(wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{print $2*100"%"}')"
